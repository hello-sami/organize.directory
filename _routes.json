{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/_*"],
  "routes": [
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/location/?$",
      "dest": "/location.html",
      "status": 200
    },
    {
      "src": "^/issues/?$",
      "dest": "/issues.html",
      "status": 200
    },
    {
      "src": "^/about/?$",
      "dest": "/about.html",
      "status": 200
    },
    {
      "src": "^/resources/?$",
      "dest": "/resources.html",
      "status": 200
    },
    {
      "src": "^/posts/([^/]+)/?$",
      "dest": "/posts/$1.html",
      "status": 200
    },
    {
      "src": "^/cities/([^/]+)/?$",
      "dest": "/cities/$1.html",
      "status": 200
    },
    {
      "src": "^/issues/([^/]+)/?$",
      "dest": "/issues/$1.html",
      "status": 200
    },
    {
      "src": "^/([^/.]+)/?$",
      "dest": "/states/$1.html",
      "status": 200,
      "check": true
    },
    {
      "src": ".*",
      "dest": "/404.html",
      "status": 404
    }
  ]
} 