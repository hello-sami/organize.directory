{
  "version": 1,
  "include": [
    "/*"
  ],
  "exclude": [
    "/_*",
    "/api/*"
  ],
  "routes": [
    { 
      "src": "/location", 
      "dest": "/location.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    { 
      "src": "/issues", 
      "dest": "/issues.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    { 
      "src": "/about", 
      "dest": "/about.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    { 
      "src": "/resources", 
      "dest": "/resources.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/posts/:path*",
      "dest": "/posts/:path*.html"
    },
    {
      "src": "/cities/:path*",
      "dest": "/cities/:path*.html"
    },
    {
      "src": "/states/:path*",
      "dest": "/states/:path*.html"
    },
    {
      "src": "/issues/:path*",
      "dest": "/issues/:path*.html"
    }
  ]
} 