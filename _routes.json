{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/_*"],
  "routes": [
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/about/?$",
      "dest": "/about.html"
    },
    {
      "src": "^/location/?$",
      "dest": "/location.html"
    },
    {
      "src": "^/issues/?$",
      "dest": "/issues.html"
    },
    {
      "src": "^/resources/?$",
      "dest": "/resources.html"
    },
    {
      "src": "^/posts/([^/]+)/?$",
      "dest": "/posts/$1.html"
    },
    {
      "src": "^/cities/([^/]+)/?$",
      "dest": "/cities/$1.html"
    },
    {
      "src": "^/([^/]+)/?$",
      "dest": "/states/$1.html",
      "override": true
    }
  ]
} 