{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/_*"],
  "routes": [
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/location$",
      "dest": "/location.html"
    },
    {
      "src": "^/issues$",
      "dest": "/issues.html"
    },
    {
      "src": "^/about$",
      "dest": "/about.html"
    },
    {
      "src": "^/resources$",
      "dest": "/resources.html"
    },
    {
      "src": "^/posts/([^/]+)$",
      "dest": "/posts/$1.html"
    },
    {
      "src": "^/cities/([^/]+)$",
      "dest": "/cities/$1.html"
    },
    {
      "src": "^/states/([^/]+)$",
      "dest": "/states/$1.html"
    },
    {
      "src": "^/issues/([^/]+)$",
      "dest": "/issues/$1.html"
    }
  ]
} 